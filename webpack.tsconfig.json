{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "allowJs": false,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "sourceMap": true,
    "lib": [
      "es2020",
      "dom",
      "webworker"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*" : ["./src/*"]
    },
    "types": ["node"]
  }
}